<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Sets Collection</title>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        /* Add any custom CSS styles here */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        img {
            max-width: 100px;
            height: auto;
        }
        .button {
            display: inline-block;
            padding: 8px 12px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }
        .button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/sets'}) %>
   
    <div class="hero">
        <!-- Filter links -->
        <div>
            <h1>Lego Sets Collection</h1>
            Filter by theme:
            <br>
            <a href="/lego/sets?theme=Technic" class="button">Technic</a>
            <a href="/lego/sets?theme=Classic%20Town" class="button">Classic Town</a>
            <!-- Add more filter links as needed -->
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Theme</th>
                <th>Year</th>
                <th>Number of Parts</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% sets.forEach(function(set) { %>
                <tr>
                    <td><img src="<%= set.img_url %>" alt="<%= set.name %>"></td>
                    <td><%= set.name %></td>
                    <td><a href="/lego/sets?theme=<%= set.theme %>" ><%= set.theme %></a></td>
                    <td><%= set.year %></td>
                    <td><%= set.num_parts %></td>
                    <td><a href="/lego/sets/<%= set.set_num %>" class="button">Details</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
